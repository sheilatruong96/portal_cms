<header class="header">
	<h1>Add Page</h1>
</header>

<form id="addPageForm">
	<div class="container">
			<div class="section">
				<label id="title" >
					Title:
						<input type="text" name="title" placeholder="My Template">
				</label>
			</div>

			<div class="section">
				<label id="url">
					URL:

						<input type="text" name="url" placeholder="myTemplate.com">

				</label>
			</div>

			<div class="section">
				<label id="template">
					Template:
					<select>
					  <option value="Template1">Template 1</option>
					  <option value="Template2">Template 2</option>
					  <option value="Template3">Template 3</option>
					  <option value="Template4">Template 4</option>
					</select>
				</label>
			</div>

			<div class="section">
				<label id="title" >
					Header: <input type="text" name="header" placeholder="About">
				</label>
			</div>

			<div id="content">
				<label>
					Content:
						 <textarea rows="8" cols="50" name="content" placeholder="Welcome to my website!"></textarea>

				</label>
			</div>

			<br>
			<br>
			<hr>
			<br>

			<div class="section">
				<label id="title" >
					Header: <input type="text" name="header2" placeholder="News">
				</label>
			</div>

			<div id="content">
				<label>
					Content: <textarea rows="8" cols="50" name="content2" placeholder=""></textarea>
				</label>
			</div>
			<br>

			<div>
				<button id="editPageSave" class="button add-page-btn">Save</button>
			</div>
	</div>
</form>
