<% include header %>
	<header>
		<center><h1> Title </h1> </center>
	</header>

	<div class="row">
		<div id="register" class="column">
			<form method="POST" action="/auth/register">
				<h2>Create an Account</h2>
				<% if(typeof regError !== 'undefined') { %>
					<div class="reg-error-container">
						<%= regError %>
					</div>
				<% } %>

				<br>
				
			    Email: <input type="email" name="email" placeholder="user@gmail.com" required>
			    <br><br>
			    Password: <input type="password" name="password" placeholder="********" required>
			    <br><br>
			    <input type="submit" value="Submit">
			</form>
		</div>

		<div id="login" class="column">
			<form method="POST" action="/auth/login">
				<h2>Log in</h2>

				<% if(typeof authError !== 'undefined') { %>
					<div class="auth-error-container">
						<%= authError %>
					</div>
				<% } %>

				<br>

			    Email: <input type="email" name="email" placeholder="user@gmail.com" required>
			    <br><br>
			    Password: <input type="password" name="password" placeholder="********" required>
			    <br><br>
			    <input type="submit" value="Submit">
			</form>
		</div>
	</div>

<% include footer %>
